{
    "root": true,
    "env": {
        "browser": false,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 6
    },
    "rules": {
        "curly": "error",
        "eqeqeq": ["error", "always", { "null": "ignore" }],
        "indent": ["error", 4],
        "no-var": "error",
        "prefer-const": "error",
        "quotes": ["error", "single"],
        "semi": ["error"]
    }
}
