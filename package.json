{
  "name": "concurrently",
  "version": "7.3.0",
  "description": "Run commands concurrently",
  "main": "index.cjs",
  "types": "dist/index.d.ts",
  "type": "module",
  "bin": {
    "concurrently": "./dist/bin/concurrently.js",
    "conc": "./dist/bin/concurrently.js"
  },
  "exports": {
    ".": {
      "import": "./dist/src/index.js",
      "require": "./index.cjs",
      "types": "./dist/src/index.d.ts"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "index.cjs"
  ],
  "engines": {
    "node": "^14.13.0 || >=16.0.0"
  },
  "scripts": {
    "build": "npm run typecheck && tsup",
    "typecheck": "tsc --noEmit",
    "format": "prettier --ignore-path .gitignore --check '**/{!(package-lock).json,*.y?(a)ml,*.md}'",
    "format:fix": "npm run format -- --write",
    "lint": "eslint . --ext mjs,js,ts --ignore-path .gitignore",
    "lint:fix": "npm run lint -- --fix",
    "prepublishOnly": "npm run build",
    "report-coverage": "cat coverage/lcov.info | coveralls",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/open-cli-tools/concurrently.git"
  },
  "funding": "https://github.com/open-cli-tools/concurrently?sponsor=1",
  "keywords": [
    "bash",
    "concurrent",
    "parallel",
    "concurrently",
    "command",
    "sh"
  ],
  "author": "Kimmo Brunfeldt",
  "license": "MIT",
  "devDependencies": {
    "@hirez_io/observer-spy": "^2.2.0",
    "@swc/core": "^1.2.224",
    "@swc/jest": "^0.2.21",
    "@types/jest": "^28.1.6",
    "@types/lodash": "^4.14.178",
    "@types/node": "^14.18.23",
    "@types/shell-quote": "^1.7.1",
    "@types/supports-color": "^8.1.1",
    "@types/yargs": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.33.0",
    "@typescript-eslint/parser": "^5.33.0",
    "chalk": "^5.0.1",
    "coveralls-next": "^4.1.2",
    "cross-env": "^7.0.3",
    "ctrlc-wrapper": "^0.0.4",
    "date-fns": "^2.29.1",
    "esbuild": "^0.15.1",
    "eslint": "^8.21.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.8.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jest": "^28.1.3",
    "jest-create-mock-instance": "^2.0.0",
    "lint-staged": "^13.0.3",
    "lodash": "^4.17.21",
    "prettier": "^2.6.2",
    "rxjs": "^7.0.0",
    "shell-quote": "^1.7.3",
    "simple-git-hooks": "^2.7.0",
    "spawn-command": "^0.0.2-1",
    "string-argv": "^0.3.1",
    "supports-color": "^9.2.2",
    "tree-kill": "^1.2.2",
    "tsup": "^6.2.2",
    "typescript": "^4.5.4",
    "yargs": "^17.3.1"
  },
  "simple-git-hooks": {
    "pre-commit": "npx lint-staged"
  },
  "lint-staged": {
    "*.m?{js,ts}": "eslint --fix",
    "{!(package-lock).json,*.{y?(a)ml,md}}": "prettier --write"
  }
}
